{
	"compilerOptions": {
		"target": "es5",
		"outDir": "lib",
		"lib": ["dom", "dom.iterable", "esnext"],
		"declaration": true,
		"declarationDir": "lib",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/declarations/scss.d.ts"],
	"exclude": ["node_modules"]
}
